@using Sport.Model

@model ActivityForCreationAndUpdate
<form asp-action="AddActivity" style="margin-top:100px;">
    <div class="row form-group">
        <div class="col-md-2 col-md-offset-2">
            <div>Užsiėmimo pavadinimas</div>
        </div>
        <div class="col-md-2">
            <input class="form-control" asp-for="Name" />
        </div>
    </div>
    <div class="row form-group">
        <div class="col-md-2 col-md-offset-2">
            <div>Užsiėmimo pradžia</div>
        </div>
        <div class="col-md-2">
            <input class="form-control" type="datetime" asp-for="Beginning" />
        </div>
    </div>
    <div class="row form-group">
        <div class="col-md-2 col-md-offset-2">
            <div>Užsiėmimo pabaiga</div>
        </div>
        <div class="col-md-2">
            <input class="form-control" type="datetime" asp-for="Ending" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-2 col-md-offset-4">
            <button type="submit" class="btn btn-primary">Pridėti</button>
        </div>
    </div>
</form>