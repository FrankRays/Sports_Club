@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <title>Registration to gym activities system</title>
    <link href="https://fonts.googleapis.com/css?family=Indie+Flower" rel="stylesheet">
    <link href="~/css/animate.css" rel="stylesheet" />
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" type="text/css"/>
    <link href="~/css/all.min.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <header>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Activity" asp-action="Index">
                    <img class="brand" src="~/images/weightlifting3.png" /></a>
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-area="" asp-controller="Activity" asp-action="Index">Home</a></li>
                    @if (User.IsInRole("Trainer"))
                    {
                    <li><a asp-area="" asp-controller="Activity" asp-action="OpenAddActivity">Add an activity</a></li>
                    }
                    @if (User.IsInRole("Trainer"))
                    {
                        <li><a asp-area="" asp-controller="Activity" asp-action="GetTrainerActivities">My activities</a></li>
                    }
                    @if (User.IsInRole("Client"))
                    {
                        <li><a asp-area="" asp-controller="Activity" asp-action="GetClientActivities">My activities</a></li>
                    }
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li><a asp-area="" asp-controller="Activity" asp-action="Logout">Logout</a></li>
                    }
                </ul>
            </div>
        </div>
    </div>
</header>

    <div class="container-fluid body-content">
        
            
                @RenderBody()
                
            
    </div>

    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/wow.min.js"></script>
        <script>
            new WOW().init();
        </script>

        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("scripts", required: false)

    <footer class="footer"><div class="row">
    <h3>Gym address: 2403 Willow Brook Way, Sandy, UT 84092</h3>
</div></footer>
</body>
</html>

